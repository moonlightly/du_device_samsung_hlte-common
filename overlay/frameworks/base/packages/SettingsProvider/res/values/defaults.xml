<resources>
    <bool name="def_dim_screen">true</bool>

    <!-- Comma-separated list of bluetooth, wifi, and cell. -->

    <bool name="def_auto_time">true</bool>
    <bool name="def_auto_time_zone">true</bool>

    <bool name="def_accelerometer_rotation">true</bool>
    
    <!-- Default screen brightness, from 0 to 255.  102 is 40%. -->
    <integer name="def_screen_brightness">127</integer>
    <bool name="def_screen_brightness_automatic_mode">true</bool>

    <bool name="def_haptic_feedback">false</bool>

    <bool name="def_bluetooth_on">true</bool>

    <bool name="def_wifi_display_on">true</bool>

    <bool name="def_install_non_market_apps">true</bool>

    <bool name="def_package_verifier_enable">true</bool>

    <bool name="def_wifi_on">true</bool>

    <!-- 0 == never, 1 == only when plugged in, 2 == always -->
    <integer name="def_wifi_sleep_policy">2</integer>

    <bool name="def_networks_available_notification_on">false</bool>

    <!-- Default value for whether or not to pulse the notification LED when there is a
         pending notification -->
    <bool name="def_notification_pulse">true</bool>

    <!-- Notifications use ringer volume -->
    <bool name="def_notifications_use_ring_volume">false</bool>

    <!-- Default for Settings.Global.WIFI_SCAN_ALWAYS_AVAILABLE -->
    <integer name="def_wifi_scan_always_available">1</integer>

</resources>
